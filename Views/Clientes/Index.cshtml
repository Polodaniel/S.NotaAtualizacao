@model IEnumerable<S.NotaAtualizacao.Models.Clientes>

@{
    ViewData["Title"] = "Clientes";
}

<h3>Clientes</h3>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Novo Cliente</a>
</p>
<table class="table table-sm">
    <thead>
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th class="w-50">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="p-1">
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td class="p-1">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td class="p-1">
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Codigo">Detalhes</a>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Codigo">Editar</a>
                <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@item.Codigo">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
